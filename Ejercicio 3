 nop
 
 

 
movlw d'100'
movwf x
	
xloop: movlw d'36'
	movwf y
		
yloop: movlw d'90'
       movwf z
       nop
       nop
       nop
       
      
       
zloop: decfsz z, f
	goto zloop
	decfsz y, f
	goto yloop
	nop
        nop
        nop
        nop
	nop
	nop
        nop
        nop
	nop
        nop
        nop
	nop
        nop
	nop
	nop
        nop
        nop
	nop
        nop
        nop
	nop
	nop
	nop
        
	
  
	decfsz x, f
	goto xloop
		
	return	
	
	

    END
